<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_menu" />

        <ImageView
            android:id="@+id/ivExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp" />

        <ImageView
            android:id="@+id/ic_logo"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/iransansweb"
            android:text="@string/appName_fa"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlSecond"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp">

        <TextView
            android:id="@+id/tvInquiryBasedOnTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/iransansweb"
            android:text="استعلام اموال بر اساس"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/llSecond1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/tvInquiryBasedOnTitle"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="9">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acbSearchByNationalCode"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="24dp"
                android:layout_weight="3"
                android:background="@drawable/btn_primary"
                android:drawableTop="@drawable/ic_user3"
                android:drawablePadding="0dp"
                android:fontFamily="@font/iransansweb"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="@string/NationalCodeOrName_fa"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acbSearchByBarcode"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:layout_weight="3"
                android:background="@drawable/btn_primary"
                android:drawableTop="@drawable/ic_scan"
                android:drawablePadding="10dp"
                android:fontFamily="@font/iransansweb"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="@string/BarcodeOrTag_fa"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acbSearchByAssetLocation"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_below="@+id/llSecond1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="24dp"
                android:layout_weight="3"
                android:background="@drawable/btn_primary"
                android:drawableTop="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:fontFamily="@font/iransansweb"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="@string/ByLocation_fa"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlDenominateAsset"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/llSecond1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/background_gradient_right_with_border">

            <TextView
                android:id="@+id/tvAssetAllocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/iransansweb"
                android:text="@string/assetAllocation_fa"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/tvAssetAllocation"
                android:src="@drawable/ic_asset_allocation" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>