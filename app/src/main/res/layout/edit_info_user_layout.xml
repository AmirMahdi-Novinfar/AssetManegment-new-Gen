<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background1">

    <RelativeLayout
        android:id="@+id/rlFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo_shahrdari"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_shahrdari"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/iransansweb"
            android:gravity="center"
            android:text="@string/appName_fa"
            android:textAlignment="0"
            android:textColor="#045E08"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlFirst">

        <RelativeLayout
            android:id="@+id/rlUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="17dp"
                android:fontFamily="@font/iransansweb"
                android:gravity="center"
                android:text="@string/sampleUserNameFamily"
                android:textAlignment="0"
                android:textColor="#9C9C9C"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/NOGHTECHIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvProductName"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/iransansweb"
                android:gravity="center"
                android:text="@string/dash"
                android:textAlignment="0"
                android:textColor="#9C9C9C"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvAssetTypeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/NOGHTECHIN"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="17dp"
                android:fontFamily="@font/iransansweb"
                android:gravity="center"
                android:text="کدملی: 123456789 "
                android:textAlignment="0"
                android:textColor="#9C9C9C"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/NOGHTECHIN2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAssetTypeName"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/iransansweb"
                android:gravity="center"
                android:text="@string/dash"
                android:textAlignment="0"
                android:textColor="#9C9C9C"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvAssetStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/NOGHTECHIN2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="17dp"
                android:fontFamily="@font/iransansweb"
                android:gravity="center"
                android:text="کد پرسنلی: 123456789 "
                android:textAlignment="0"
                android:textColor="#9C9C9C"
                android:textSize="11sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="80dp"
                android:layout_toLeftOf="@+id/tvAssetStatus" />

            <TextView
                android:id="@+id/NOGHTECHIN3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAssetStatus"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/iransansweb"
                android:gravity="center"
                android:text="@string/dash"
                android:textAlignment="0"
                android:textColor="#9C9C9C"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="200dp"
                android:layout_marginRight="80dp"
                android:layout_toLeftOf="@+id/tvAssetStatus" />

            <TextView
                android:id="@+id/tvOfficeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/NOGHTECHIN3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="17dp"
                android:fontFamily="@font/iransansweb"
                android:gravity="center"
                android:text="نام اداره : - "
                android:textAlignment="0"
                android:textColor="#9C9C9C"
                android:textSize="11sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="150dp"
                android:layout_marginRight="80dp"
                android:layout_toLeftOf="@+id/tvAssetStatus" />

            <TextView
                android:id="@+id/NOGHTECHIN4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvOfficeName"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/iransansweb"
                android:gravity="center"
                android:text="@string/dash"
                android:textAlignment="0"
                android:textColor="#9C9C9C"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvCircleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/NOGHTECHIN4"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/iransansweb"
                android:gravity="center"
                android:text="نام دایره : - "
                android:textAlignment="0"
                android:textColor="#9C9C9C"
                android:textSize="11sp" />


        </RelativeLayout>


        <Button
            android:id="@+id/btnInquiryUserProperties"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/rlUserInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:backgroundTint="#045E08"
            android:fontFamily="@font/iransansweb"
            android:text="@string/registerAndReturn_fa"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/btnInquiryUserProperties"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#F84141"
            android:fontFamily="@font/iransansweb"
            android:text="@string/delete_fa"
            android:textColor="@color/white"
            android:textSize="12dp" />

    </RelativeLayout>

</RelativeLayout>