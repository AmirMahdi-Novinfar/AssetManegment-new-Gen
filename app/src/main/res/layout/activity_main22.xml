<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rlFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="22dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_menu" />

            <ImageView
                android:id="@+id/ivExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="15dp" />


            <ImageView
                android:id="@+id/ic_logo"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/iransansweb"
                android:text="@string/appName_fa"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
        android:id="@+id/rlSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tvInquiryBasedOnTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/iransansweb"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="استعلام اموال بر اساس"
            android:textColor="@color/white"></TextView>

        <LinearLayout
            android:id="@+id/llSecond1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInquiryBasedOnTitle"
            android:layoutDirection="rtl"
            android:orientation="vertical"
           >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acbSearchByNationalCode"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_primery_main_new"
                android:drawableRight="@drawable/codemelilogo"
                android:drawablePadding="15dp"
                android:fontFamily="@font/iransansweb"
                android:paddingTop="5dp"
                android:text="@string/NationalCodeOrName_fa"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center_vertical"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acbSearchByBarcode"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:paddingRight="26dp"
                android:paddingTop="2dp"

                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/btn_primery_main_new"
                android:drawableRight="@drawable/ic_scan"
                android:drawablePadding="20dp"
                android:fontFamily="@font/iransansweb"
                android:text="@string/BarcodeOrTag_fa"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center_vertical"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acbSearchByAssetLocation"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:paddingRight="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/btn_primery_main_new"
                android:drawableRight="@drawable/ic_location"
                android:drawablePadding="15dp"
                android:fontFamily="@font/iransansweb"
                android:paddingTop="3dp"
                android:text="@string/ByLocation_fa"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center_vertical"
                />

        </LinearLayout>



    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rltheree"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/secendtvInquiryBasedOnTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/iransansweb"
            android:text="شناسایی اموال بر اساس"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:weightSum="9"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_below="@+id/secendtvInquiryBasedOnTitle"
            android:layoutDirection="rtl"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rlDenominateAsset"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="4"
                android:background="@drawable/background_gradient_right_with_border"
                android:drawableTop="@drawable/newassetlogoic"
                android:fontFamily="@font/iransansweb"
                android:paddingTop="20dp"
                android:text="@string/newasset"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/makhdoosh_activity"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="4"
                android:layout_marginRight="30dp"
                android:background="@drawable/background_gradient_right_with_border"
                android:drawableTop="@drawable/newasset9999"
                android:fontFamily="@font/iransansweb"
                android:paddingTop="12dp"
                android:text="@string/makhdoosh_fa"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center"
                />



        </LinearLayout>

