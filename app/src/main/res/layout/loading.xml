<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vwParentLoading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa777777"
    android:elevation="100dp"
    android:translationZ="100dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/givLoading"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:lottie_rawRes="@raw/aniiiiii22"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/givLoading"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/iransansweb"
        android:text="@string/please_wait"
        android:textColor="#fff"
        android:textSize="14sp"
        app:fontFamily="@font/iransansweb" />
</RelativeLayout>